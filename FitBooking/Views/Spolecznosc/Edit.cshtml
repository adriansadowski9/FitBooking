@model Spolecznosc

@{
    ViewBag.Title = "Edytuj portale społecznościowe";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal" style="text-align:center; margin: 0 auto;">
        <h2 style="text-align:center; margin-top:10px;">Edytuj portale społecznościowe</h2>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)

        <div class="form-group">
            FACEBOOK
            <div class="col-md-5 col-md-center">
                @Html.EditorFor(model => model.facebook, new { htmlAttributes = new { @class = "form-control", @style = "text-align:center;" } })
                @Html.ValidationMessageFor(model => model.facebook, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            INSTAGRAM
            <div class="col-md-5 col-md-center">
                @Html.EditorFor(model => model.instagram, new { htmlAttributes = new { @class = "form-control", @style = "text-align:center;" } })
                @Html.ValidationMessageFor(model => model.instagram, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            SNAPCHAT
            <div class="col-md-5 col-md-center">
                @Html.EditorFor(model => model.snapchat, new { htmlAttributes = new { @class = "form-control", @style = "text-align:center;" } })
                @Html.ValidationMessageFor(model => model.snapchat, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            TWITTER
            <div class="col-md-5 col-md-center">
                @Html.EditorFor(model => model.twitter, new { htmlAttributes = new { @class = "form-control", @style = "text-align:center;" } })
                @Html.ValidationMessageFor(model => model.twitter, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-5 col-md-5 col-md-center">
                <input type="submit" value="ZAPISZ" class="btn-primaryS" />
            </div>
        </div>
    </div>
}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
