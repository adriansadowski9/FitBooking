@model Adres

@{
    ViewBag.Title = "Edytuj adres";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal" style="text-align:center; margin: 0 auto;">
        <h2 style="text-align:center; margin-top:10px;">Edytuj adres</h2>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)

        <div class="form-group">
            ULICA
            <div class="col-md-5 col-md-center">
                @Html.EditorFor(model => model.ulica, new { htmlAttributes = new { @class = "form-control", @style = "text-align:center;" } })
                @Html.ValidationMessageFor(model => model.ulica, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            NUMER DOMU
            <div class="col-md-5 col-md-center">
                @Html.EditorFor(model => model.nr_domu, new { htmlAttributes = new { @class = "form-control", @style = "text-align:center;" } })
                @Html.ValidationMessageFor(model => model.nr_domu, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            KOD POCZTOWY
            <div class="col-md-5 col-md-center">
                @Html.EditorFor(model => model.kod_pocztowy, new { htmlAttributes = new { @class = "form-control", @style = "text-align:center;" } })
                @Html.ValidationMessageFor(model => model.kod_pocztowy, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            MIASTO
            <div class="col-md-5 col-md-center">
                @Html.EditorFor(model => model.miasto, new { htmlAttributes = new { @class = "form-control", @style = "text-align:center;" } })
                @Html.ValidationMessageFor(model => model.miasto, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            PAŃSTWO
            <div class="col-md-5 col-md-center">
                @Html.EditorFor(model => model.panstwo, new { htmlAttributes = new { @class = "form-control", @style = "text-align:center;" } })
                @Html.ValidationMessageFor(model => model.panstwo, "", new { @class = "text-danger" })
            </div>
        </div>


        <div class="form-group">
            <div class="col-md-offset-5 col-md-5 col-md-center">
                <input type="submit" value="ZAPISZ" class="btn-primaryS" />
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
